{
  "name": "Item",
  "base": "PersistedModel",
  "enableRemoteReplication": true,
  "useNewUrlParser": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "executor": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "string",
      "required": false,
      "default": "no-image.png"
    },
    "description": {
      "type": "string",
      "required": false
    },
    "category": {
      "type": "string",
      "required": false
    },
    "tare": {
      "type": "string",
      "required": false
    },
    "quantity": {
      "type": "number",
      "required": false
    },
    "weight": {
      "type": "number",
      "required": false
    },
    "unit": {
      "type": "string",
      "required": true
    },
    "menuItem": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "averageCost": {
      "type": "number",
      "required": true
    },
    "autoSellingPrice": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "sellingPrice": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "recipe": {
      "type": "hasMany",
      "model": "Ingredient",
      "foreignKey": "recipeId",
      "primaryKey": "id",
      "through": "Ingredient"
    },
    "ingredient": {
      "type": "hasMany",
      "model": "Ingredient",
      "foreignKey": "ingredientId",
      "through": "Ingredient"
    },
    "category": {
      "type": "hasOne",
      "model": "category",
      "foreignKey": "id"
    }
  },
  "acls": [
